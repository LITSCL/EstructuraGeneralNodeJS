<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%- include('includes/head_styles.ejs'); %>
    <%- include('includes/head_scripts.ejs'); %>
</head>
<body>
    <%- include('includes/header.ejs'); %>
    <h1>Estas en Crear Producto</h1>
    <form action="<%=url%>/producto/save" method="POST">
		<table border="5px">
			<tr>
				<td>Codigo</td>
				<td><input type="text" name="codigo" required/></td>
			</tr>
			<tr>
				<td>Nombre</td>
				<td><input type="text" name="nombre" required/></td>
			</tr>
			<tr>
				<td>Precio</td>
				<td><input type="number" name="precio" required/></td>
			</tr>
			<tr>
				<td>Categoria</td>
				<td>
					<select name="categoria">
                    <%
                    for (var i = 0; i < categorias.length; i++) {
                    %>
                       <option value="<%=categorias[i].id%>"><%=categorias[i].nombre%></option>
                    <%
                    }
                    %> 
					</select>
				</td>
			</tr>
		</table>
        <button type="submit">Crear</button>
    </form>
    <% 
    if (sesion.crearProducto == "Exitoso") {
    %>
        <strong class="alerta-verde">Producto creado correctamente</strong>
    <%
    }
    if (sesion.crearProducto == "Fallido") {
    %>
        <strong class="alerta-roja">Error al crear el producto</strong>
    <%
    }
    %>

<%
delete sesion.crearProducto; //Borrando la sesiÃ³n.
%>
</body>
</html>